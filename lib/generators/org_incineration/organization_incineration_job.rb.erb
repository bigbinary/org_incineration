# frozen_string_literal: true

class OrganizationIncinerationJob < ApplicationJob
  include Delayed::RecurringJob

  run_every 1.day
  run_at "00:30am"
  timezone "UTC"
  queue "default"

  def perform
    Organization.incinerables.each do |organization|
      OrgIncineration::Incinerator.new(organization).run!
    end
  end
end
